                        var detailTag = [];
                        if (Array.isArray(response.ProcessDetail.ProcessTag)) {
                            detailTag = response.ProcessDetail.ProcessTag;
                        } else {
                            detailTag.push(response.ProcessDetail.ProcessTag);
                        }

                        $('<h5 class="tap_head">加工資訊</h5>').insertBefore($('#tap_table3'));
                        $('#tap_table3').footable({
                            "toggleColumn": "last",
                            "expandFirst": true,
